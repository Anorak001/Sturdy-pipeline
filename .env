# ==============================================================================
#  TVMJNS — Environment variables consumed by docker-compose.yml
#  Copy this file to .env and customise as needed.
# ==============================================================================

# ── PostgreSQL (official image uses POSTGRES_ prefix) ─── 
POSTGRES_USER=streaming_user
POSTGRES_PASSWORD=streaming_pass       
POSTGRES_DB=streaming_db

# ── Spark Worker resources (tune to your machine) ────────── 
SPARK_WORKER_MEMORY=2g
SPARK_WORKER_CORES=2
